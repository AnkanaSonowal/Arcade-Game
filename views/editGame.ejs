<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Edit Game</h1>
    <form action="/games/<%= game._id %>?_method=PUT" method="POST">
      <!-- Title -->
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= game.name %>">
      </div>

      <!-- Description -->
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3"><%= game.description %></textarea>
      </div>

      <!-- Type -->
      <div class="form-group">
        <label for="type">Type</label>
        <input type="text" class="form-control" id="type" name="type" value="<%= game.type %>">
      </div>

      <!-- Minimum Age -->
      <div class="form-group">
        <label for="minAge">Minimum Age</label>
        <input type="number" class="form-control" id="minAge" name="minAge" value="<%= game.minimumAge %>">
      </div>

      <!-- Pricing (Hourly) -->
      <div class="form-group">
        <label for="pricingHourly">Pricing (Hourly)</label>
        <input type="text" class="form-control" id="pricingHourly" name="pricingHourly" value="<%= game.pricing.hourly %>">
      </div>

      <!-- Pricing (Per Game) -->
      <div class="form-group">
        <label for="pricingPerGame">Pricing (Per Game)</label>
        <input type="text" class="form-control" id="pricingPerGame" name="pricingPerGame" value="<%= game.pricing.perGame %>">
      </div>

      <!-- Image Path -->
      <div class="form-group">
        <label for="imagePath">Image Path</label>
        <input type="text" class="form-control" id="imagePath" name="imagePath" value="<%= game.image.path %>">
      </div>

      <!-- Image Alt Text -->
      <div class="form-group">
        <label for="imageAlt">Image Alt Text</label>
        <input type="text" class="form-control" id="imageAlt" name="imageAlt" value="<%= game.image.description %>">
      </div>

      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/games/<%= game._id %>" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>
